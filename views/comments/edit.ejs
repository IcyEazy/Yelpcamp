<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 class="newh1">Edit Comment</h1>
        <div>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button id="newBtn" class="btn btn-primary btn-lg btn-block">Update</button>
                </div>
            </form>

            <a id="newa" href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>

    </div>
</div>

<%- include("../partials/footer") %>